<div class="block-wrapper">
  <div class = "container">
    <div class = "row">
      <div class="content-wrapper">
        <div class="tab-movies tab-crm">
          <div class="tab-movies-line">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab_info" data-toggle="tab"><%= t(".forgot_password") %></a></li>
            </ul>
            <div class="tab-content">
              <div id="tab_info" class="tab-pane active">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="row">
                    <div class="col-md-5 col-sm-7 col-xs-7">
                      <%= f.label :email %><br/>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login pass" %>
                    </div>
                    <div class="col-md-12"><%= f.submit t(".send_email"), id: "save", class: "btn primary btn-login-buyticket" %></div>
                  </div> 
                <% end %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
