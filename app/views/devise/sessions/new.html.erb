<div class = "block-wrapper">
  <div class = "container">
    <div class="row">
      <div id="login-modal" class="modal fade in" style="display: block; padding-right: 15px;">
        <div class="modal-dialog">
          <div class="modal-outer-container">
            <div class="modal-middle-container">
              <div class="login-wrapper animated slideInDown">
                <div class="login-container">
                  <span class="close">
                  <%= link_to root_path do%>
                    <i class="fa-solid fa-xmark"></i>
                  <% end %>
                  </span>
                  <div class="tab-login-line">
                    <ul class="nav nav-tabs">
                      <li class="active">
                        <%= link_to t("text.login"), "#", id: "a_tab_login_1", data: {toggle: "tab"} %>
                      </li>
                    </ul>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="tab-content">
                          <div id="tab_login_1" class="tab-pane active">
                            <div class="login-tab-wrapper">
                              <div class="login-heading">
                                <div class="text-heading">
                                  <span class="sub-text ng-scope"><%= t "text.sign_in_message" %></span>
                                </div>
                              </div>
                              <div class="login-form">
                                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                  <%= f.label :email %>
                                  <%= f.email_field :email, class: "login" %>
                                  <%= f.label :password %>
                                  <%= f.password_field :password, class: "login" %>
                                  <div class="field">
                                    <% if devise_mapping.rememberable? %>
                                      <%= f.check_box :remember_me %>
                                      <%= f.label :remember_me %>
                                    <% end %>
                                  </div>
                                  <%= f.submit t(".log_in"), class: "btn primary input" %>
                                  <br>
                                <% end %>
                                <%= render "devise/shared/links" %>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="login-background">
        </div>
      </div>
    </div>
  </div>
</div>
