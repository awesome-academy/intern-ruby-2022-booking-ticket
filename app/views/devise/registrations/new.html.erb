<div class="block-wrapper">
  <div class = "container">
    <div class = "row">
      <div class="content-wrapper">
        <div class="tab-movies tab-crm">
          <div class="tab-movies-line">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#tab_info" data-toggle="tab"><%= t(".sign_up") %></a></li>
            </ul>
            <div class="tab-content">
              <div id="tab_info" class="tab-pane active">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="row">
                    <div class="col-md-5 col-sm-7 col-xs-7">
                      <%= f.label :user_name %><br/>
                      <%= f.text_field :user_name, autofocus: true, class: "login pass" %>                
                    </div>
                  </div>
                  <div class="row row-info">
                    <div class="col-md-2 col-sm-4 col-xs-4">
                      <%= f.label :sex %><br/>
                      <%= f.text_field :sex, class: "login pass" %>                
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12">
                      <%= f.label :phone %><br/>
                      <%= f.text_field :phone, class: "login pass" %> 
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-5 col-sm-7 col-xs-7">
                      <%= f.label :email %><br/>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login pass" %>
                    </div>
                  </div> 
                  <div class="row">
                    <div class="col-md-5 col-sm-7 col-xs-7">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %><%= t(".characters_minimum") %></em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: "login pass" %>
                    </div>
                  </div>
                  <div class = "row">
                    <div class="col-md-5 col-sm-7 col-xs-7">
                      <%= f.label :password_confirmation, t(".confirm_new_password") %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "login pass" %>
                    </div>
                    <div class="col-md-12"><%= f.submit t(".sign_up"), id: "save", class: "btn primary btn-login-buyticket" %></div>
                  </div>
                <% end %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
