<div class = "tab-movies-line">
  <div class = "tab-content">
    <div class="detail-group-cinema ">
      <div class="cinema-block">
        <div class = "title-cinema">
          <h5>
            <%= payment.updated_at.to_s(:time)%> &nbsp; |
            <%= t("time.date.day_names")[payment.updated_at.wday] %>,
            <%= payment.updated_at.strftime(t "time.formats.default")%>
          </h5>
        </div>
        <div class="item-cinema payment-cinema">
          <h2 class="ticket-title upper-text"><%= payment.tickets.first.seat.show_time.movie.title %></h2>
          <b><%= t".cinema" %>: &nbsp;</b>
          <%= payment.tickets.first.seat.show_time.room.name %>&nbsp; | <%= payment.tickets.first.seat.show_time.room_id %>&nbsp;
          <b><%= t ".show_time" %>: &nbsp;</b>
          <%= payment.tickets.first.seat.start_time.to_s(:time)%> &nbsp; |
          <%= t("time.date.day_names")[payment.tickets.first.seat.start_time.wday] %>,
          <%= payment.tickets.first.seat.start_time.strftime(t "time.formats.default")%>
          <% payment.tickets.each do |ticket| %>
            <div class="">
              <div class="ticket-header ticket-header-feature">
                  <section class="ticket-feature">
                    <article class="row">
                      <div class="col-md-12">
                        <div class="ticket-detail">
                          <div class="ticket-info">
                            <div class="dotted-line">
                              <b><%= t ".seat" %>: &nbsp;</b>
                              <span class="select-seat"><%= ticket.seat_number %></span>
                            </div>
                            <div class="dotted-line">
                              <b><%= t ".price" %>: &nbsp;</b>
                              <span class="select-seat"><%= number_to_currency ticket.price %></span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </article>
                  </section>
              </div>
            </div>
          <% end %>
          <h3 style="font-style: italic"><b><%= t ("sum") %>: </b><%= number_to_currency payment.total_cost %></h3>
        </div>
      </div>
  </div>
</div>
</div>
