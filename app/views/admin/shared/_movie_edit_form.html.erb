<div class="container">
  <h1><%= t ".edit" %></h1>
  <hr>
  <%= form_for(@movie, url: admin_movie_path) do |f| %>
    <%= render "admin/shared/error_message", object: f.object %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".title" %></label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".description" %></label>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".duration" %></label>
      <div class="col-sm-10">
        <%= f.number_field :duration_min, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".release" %></label>
      <div class="col-sm-10">
        <%= f.date_field :release_time, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".language" %></label>
      <div class="col-sm-10">
        <%= f.text_field :language, size: "20x1", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".director" %></label>
      <div class="col-sm-10">
        <%= f.text_field :director, size: "50x2", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".cast" %></label>
      <div class="col-sm-10">
        <%= f.text_field :cast, size: "50x2", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".range" %></label>
      <div class="col-sm-10">
        <%= f.text_field :age_range, size: "20x1", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".link" %></label>
      <div class="col-sm-10 image">
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".category" %></label>
      <div class="col-sm-10">
        <%= f.select :category_ids, Category.pluck(:name, :id),{}, {class: "form-control select2-form", multiple: "multiple"} %>
      </div>
    </div>
    <br>
    <div class="text-center">
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    </div>
    <br><br>
  <% end %>
</div>
