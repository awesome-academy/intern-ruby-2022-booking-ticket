<div>
<%= link_to t(".add"), admin_add_movie_path, method: :get, class: "btn btn-primary  active" %>
</div>
<%= search_form_for(@q, url: admin_movies_path, class: "search-form") do |f| %>
  <div class="input-append">
    <%= f.search_field :movie_attrs_cont, placeholder: t(".find_box"), class: "search-box" %>
    <%= f.date_field :show_times_start_time_eq, class: "search-box" %>
    <%= f.submit class:"btn btn-info" %>
  </div>
<% end %>
<%= sort_link(@q, :updated_at,default_order: :asc) %>
<br><br>
<table class="table table-striped">
  <tr>
    <th><%= t ".id" %></th>
    <th><%= t ".title" %></th>
    <th><%= t ".category" %></th>
    <th><%= t ".duration" %></th>
    <th><%= t ".release" %></th>
    <th><%= t ".range" %></th>
    <th><%= t ".show_times" %></th>
    <th></th>
    <th></th>
  </tr>

  <% @stt = 1 + (@pagy.page - 1) * Settings.digits.admin_movie_per_page %>
  <%= render @movies %>
</table>
<%== pagy_bootstrap_nav @pagy %>
