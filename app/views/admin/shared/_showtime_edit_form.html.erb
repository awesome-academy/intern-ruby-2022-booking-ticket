<div class="container">
  <h1><%= t ".edit" %></h1>
  <br>
  <%= form_for(@show_time, url: admin_movie_show_time_path) do |f| %>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".start_time" %></label>
      <div class="col-sm-10">
        <%= f.datetime_field :start_time %>
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-sm-2 col-form-label"><%= t ".room" %></label>
      <div class="col-sm-10">
        <%= f.select :room_id, grouped_options_for_select(Cinema.grouped_options) %>
      </div>
    </div>
    <br>
    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  <% end %>
</div>
